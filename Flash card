<body>
    <div class="app-container">
        <div class="header">
            <h1>üìö Flashcard Quiz App</h1>
            <p>Study smarter with interactive flashcards</p>
        </div>

        <div id="quiz-view" class="quiz-view">
            <div class="flashcard-container">
                <div class="flashcard" id="flashcard" onclick="toggleCard()">
                    <div class="card-indicator" id="card-indicator">Card 1 of 0</div>
                    <div class="flashcard-content" id="flashcard-content">
                        <div class="empty-state">
                            <h3>No flashcards yet!</h3>
                            <p>Create your first flashcard to get started.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="progress-bar" id="progress-container" style="display: none;">
                <div class="progress-fill" id="progress-fill"></div>
            </div>

            <div class="controls">
                <button class="btn secondary" id="prev-btn" onclick="previousCard()" disabled>‚Üê Previous</button>
                <button class="btn success" id="show-answer-btn" onclick="toggleCard()" disabled>Show Answer</button>
                <button class="btn secondary" id="next-btn" onclick="nextCard()" disabled>Next ‚Üí</button>
            </div>

            <div class="controls">
                <button class="btn" onclick="showAddForm()">+ Add Card</button>
                <button class="btn secondary" onclick="showManageCards()">Manage Cards</button>
            </div>
        </div>

        <div id="add-form" class="add-form" style="display: none;">
            <h2 style="margin-bottom: 20px; color: #333;">Add New Flashcard</h2>
            
            <div class="card-form">
                <div class="form-group">
                    <label for="question-input">Question:</label>
                    <textarea id="question-input" placeholder="Enter your question here..." required></textarea>
                </div>
                
                <div class="form-group">
                    <label for="answer-input">Answer:</label>
                    <textarea id="answer-input" placeholder="Enter the answer here..." required></textarea>
                </div>
                
                <div class="controls">
                    <button class="btn success" onclick="saveCard()">Save Card</button>
                    <button class="btn secondary" onclick="cancelAdd()">Cancel</button>
                </div>
            </div>
        </div>

        <div id="manage-view" class="manage-view" style="display: none;">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                <h2 style="color: #333;">Manage Flashcards</h2>
                <button class="btn secondary" onclick="backToQuiz()">‚Üê Back to Quiz</button>
            </div>
            
            <div id="cards-list" class="card-list"></div>
        </div>

        <div id="edit-form" class="edit-form" style="display: none;">
            <h2 style="margin-bottom: 20px; color: #333;">Edit Flashcard</h2>
            
            <div class="card-form">
                <div class="form-group">
                    <label for="edit-question-input">Question:</label>
                    <textarea id="edit-question-input" required></textarea>
                </div>
                
                <div class="form-group">
                    <label for="edit-answer-input">Answer:</label>
                    <textarea id="edit-answer-input" required></textarea>
                </div>
                
                <div class="controls">
                    <button class="btn success" onclick="updateCard()">Update Card</button>
                    <button class="btn secondary" onclick="cancelEdit()">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let flashcards = [];
        let currentCardIndex = 0;
        let showingAnswer = false;
        let editingIndex = -1;

        // Sample data to get started
        flashcards = [
            {
                question: "What is the capital of France?",
                answer: "Paris"
            },
            {
                question: "What is 2 + 2?",
                answer: "4"
            },
            {
                question: "What programming language is used for web styling?",
                answer: "CSS (Cascading Style Sheets)"
            }
        ];

        function updateDisplay() {
            const flashcard = document.getElementById('flashcard');
            const content = document.getElementById('flashcard-content');
            const indicator = document.getElementById('card-indicator');
            const showAnswerBtn = document.getElementById('show-answer-btn');
            const prevBtn = document.getElementById('prev-btn');
            const nextBtn = document.getElementById('next-btn');
            const progressContainer = document.getElementById('progress-container');
            const progressFill = document.getElementById('progress-fill');

            if (flashcards.length === 0) {
                content.innerHTML = `
                    <div class="empty-state">
                        <h3>No flashcards yet!</h3>
                        <p>Create your first flashcard to get started.</p>
                    </div>
                `;
                indicator.textContent = 'No cards';
                showAnswerBtn.disabled = true;
                prevBtn.disabled = true;
                nextBtn.disabled = true;
                progressContainer.style.display = 'none';
                flashcard.classList.remove('flipped');
                return;
            }

            const currentCard = flashcards[currentCardIndex];
            indicator.textContent = `Card ${currentCardIndex + 1} of ${flashcards.length}`;
            
            if (showingAnswer) {
                content.textContent = currentCard.answer;
                showAnswerBtn.textContent = 'Show Question';
                flashcard.classList.add('flipped');
            } else {
                content.textContent = currentCard.question;
                showAnswerBtn.textContent = 'Show Answer';
                flashcard.classList.remove('flipped');
            }

            showAnswerBtn.disabled = false;
            prevBtn.disabled = currentCardIndex === 0;
            nextBtn.disabled = currentCardIndex === flashcards.length - 1;

            // Update progress bar
            progressContainer.style.display = 'block';
            const progress = ((currentCardIndex + 1) / flashcards.length) * 100;
            progressFill.style.width = progress + '%';
        }

        function toggleCard() {
            if (flashcards.length === 0) return;
            showingAnswer = !showingAnswer;
            updateDisplay();
        }

        function nextCard() {
            if (currentCardIndex < flashcards.length - 1) {
                currentCardIndex++;
                showingAnswer = false;
                updateDisplay();
            }
        }

        function previousCard() {
            if (currentCardIndex > 0) {
                currentCardIndex--;
                showingAnswer = false;
                updateDisplay();
            }
        }

        function showAddForm() {
            document.getElementById('quiz-view').style.display = 'none';
            document.getElementById('add-form').style.display = 'block';
            document.getElementById('manage-view').style.display = 'none';
            document.getElementById('edit-form').style.display = 'none';
            document.getElementById('question-input').focus();
        }

        function saveCard() {
            const question = document.getElementById('question-input').value.trim();
            const answer = document.getElementById('answer-input').value.trim();

            if (!question || !answer) {
                alert('Please fill in both question and answer fields.');
                return;
            }

            flashcards.push({ question, answer });
            
            // Clear form
            document.getElementById('question-input').value = '';
            document.getElementById('answer-input').value = '';
            
            // Go back to quiz view
            backToQuiz();
            
            // If this was the first card, set it as current
            if (flashcards.length === 1) {
                currentCardIndex = 0;
            }
            
            updateDisplay();
        }

        function cancelAdd() {
            document.getElementById('question-input').value = '';
            document.getElementById('answer-input').value = '';
            backToQuiz();
        }

        function showManageCards() {
            document.getElementById('quiz-view').style.display = 'none';
            document.getElementById('add-form').style.display = 'none';
            document.getElementById('manage-view').style.display = 'block';
            document.getElementById('edit-form').style.display = 'none';
            updateCardsList();
        }

        function updateCardsList() {
            const cardsList = document.getElementById('cards-list');
            
            if (flashcards.length === 0) {
                cardsList.innerHTML = `
                    <div class="empty-state">
                        <h3>No flashcards to manage</h3>
                        <p>Add some flashcards first to manage them here.</p>
                    </div>
                `;
                return;
            }

            cardsList.innerHTML = flashcards.map((card, index) => `
                <div class="card-item">
                    <div class="card-content">
                        <div class="card-question">${card.question}</div>
                        <div class="card-answer">${card.answer}</div>
                    </div>
                    <div class="card-actions">
                        <button class="btn" onclick="editCard(${index})">Edit</button>
                        <button class="btn danger" onclick="deleteCard(${index})">Delete</button>
                    </div>
                </div>
            `).join('');
        }

        function editCard(index) {
            editingIndex = index;
            const card = flashcards[index];
            
            document.getElementById('edit-question-input').value = card.question;
            document.getElementById('edit-answer-input').value = card.answer;
            
            document.getElementById('quiz-view').style.display = 'none';
            document.getElementById('add-form').style.display = 'none';
            document.getElementById('manage-view').style.display = 'none';
            document.getElementById('edit-form').style.display = 'block';
        }

        function updateCard() {
            const question = document.getElementById('edit-question-input').value.trim();
            const answer = document.getElementById('edit-answer-input').value.trim();

            if (!question || !answer) {
                alert('Please fill in both question and answer fields.');
                return;
            }

            flashcards[editingIndex] = { question, answer };
            editingIndex = -1;
            
            showManageCards();
            updateDisplay();
        }

        function cancelEdit() {
            editingIndex = -1;
            showManageCards();
        }

        function deleteCard(index) {
            if (confirm('Are you sure you want to delete this flashcard?')) {
                flashcards.splice(index, 1);
                
                // Adjust current card index if necessary
                if (currentCardIndex >= flashcards.length) {
                    currentCardIndex = Math.max(0, flashcards.length - 1);
                }
                
                showingAnswer = false;
                updateCardsList();
                updateDisplay();
            }
        }

        function backToQuiz() {
            document.getElementById('quiz-view').style.display = 'block';
            document.getElementById('add-form').style.display = 'none';
            document.getElementById('manage-view').style.display = 'none';
            document.getElementById('edit-form').style.display = 'none';
        }

        // Keyboard navigation
        document.addEventListener('keydown', function(event) {
            if (document.getElementById('quiz-view').style.display !== 'none') {
                switch(event.key) {
                    case 'ArrowLeft':
                        previousCard();
                        break;
                    case 'ArrowRight':
                        nextCard();
                        break;
                    case ' ':
